{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ListRelevantPrefixes",
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": "arn:aws:s3:::mylg-files-v12",
      "Condition": { "StringLike": { "s3:prefix": [ "uploads/*", "projects/*" ] } }
    },
    {
      "Sid": "GetObjectsInUploads",
      "Effect": "Allow",
      "Action": [ "s3:GetObject", "s3:GetObjectVersion" ],
      "Resource": "arn:aws:s3:::mylg-files-v12/uploads/*"
    },
    {
      "Sid": "PutObjectsInProjects",
      "Effect": "Allow",
      "Action": [ "s3:PutObject", "s3:DeleteObject" ],
      "Resource": "arn:aws:s3:::mylg-files-v12/projects/*"
    }
  ]
}
